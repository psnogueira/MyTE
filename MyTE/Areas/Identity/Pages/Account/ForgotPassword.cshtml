@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="d-flex justify-content-between align-items-center position-relative">
    <div class="col-md-5 d-flex flex-column justify-content-evenly ">
        <h1 class="text-primary fw-bold">@ViewData["Title"]</h1>
        <h2 class="mb-3">Insira seu email.</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Redefinir senha</button>
        </form>
    </div>

    <div class="col-md-6">
        <img class=" w-100" src="~/img/artSq.jpg" alt="Arte decorativa" />
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
