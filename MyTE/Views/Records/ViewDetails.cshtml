@model MyTE.Models.ViewModel.RecordDetailsViewModel

@{
    ViewData["Title"] = "Relatório";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}
<div class="container d-flex justify-content-between align-items-end mt-3">
    <div>
        <div class="col">
            <a class=" start-0 d-flex align-items-center gap-1 text-white fs-5 text-decoration-none" asp-action="AdminView">
                <i class="bi bi-arrow-left-short fs-3"></i>Voltar
            </a>
            <h1 class="fw-bold display-4 text-white">@ViewData["Title"]</h1>
        </div>

        <div class="form-actions input-group w-30rem">
            <div class="form-floating mb-3 w-25">
                <input type="text" class="form-control bg-white " name="SearchString" value="@Model.BiweeklyRecord.UserEmail" placeholder="name@example.com" disabled />
                <label class="form-label text-secondary">Usuário</label>
            </div>
            <div class="form-floating mb-3 w-25">
                <input type="text" class="form-control bg-white " name="StartDate" value="@Model.BiweeklyRecord.StartDate.ToString("dd/MM/yyyy") - @Model.BiweeklyRecord.EndDate.ToString("dd/MM/yyyy")" placeholder="Data Inicial" disabled />
                <label class="form-label text-secondary">Periodo</label>
            </div>
            <div class="form-floating mb-3 w-10px">
                <input type="text" class="form-control bg-white" name="TotalHours" value="@Model.BiweeklyRecord.TotalHours" placeholder="Data Inicial" disabled />
                <label class="form-label text-secondary">Total de horas</label>
            </div>
        </div>
    </div>
    <div class="my-3">
        <a class="btn btn-primary align-content-end " asp-action="Index">Download</a>
    </div>
</div>

<img class="position-absolute object-fit-cover w-100 h-20rem top-0 z-n1" src="~/img/ArtHz.jpg" alt="Arte ilustrativa" />

<div class="bg-white container rounded table-responsive h-20rem overflow-y-scroll">
    <table class="table text-center align-middle">
        <thead>
            <tr>
                <th>Data</th>
                <th>Horas</th>
                <th>WBS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.RecordDetails)
            {
                if (detail.Record.Hours > 0)
                {
                    <tr>
                        <td>@detail.Record.Data.ToString("dd/MM/yyyy")</td>
                        <td>@detail.Record.Hours</td>
                        <td>@detail.WBS?.Code - @detail.WBS?.Desc</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>