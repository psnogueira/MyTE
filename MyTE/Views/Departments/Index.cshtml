@model MyTE.Models.ViewModel.DepartmentViewModel

@{
    ViewData["Title"] = "Departamento";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<div class="container mt-3">
    <h1 class="fw-bold display-2 text-white mb-3">@ViewData["Title"]</h1>
    <div class="d-flex align-items-center justify-content-between my-3">
        <form asp-action="Index" method="get">
            <div class="form-actions input-group w-50px">
                <input type="text" class="form-control" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Buscar por código ou descrição" />
                <input class="btn btn-outline-primary" type="submit" value="Procurar" />
                <a class="btn btn-outline-primary align-content-center" asp-action="Index">Lista completa</a>
            </div>
        </form>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">
            <i class="bi bi-plus-lg"></i> Novo departamento
        </button>
    </div>
</div>

<img class="position-absolute object-fit-cover w-100 h-50 top-0 z-n1" src="~/img/ArtH2.jpg" alt="Arte ilustrativa" />

<div class="bg-white container rounded table-responsive">
    <table class="table text-center align-middle">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Department.Name)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DepartmentList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="text-primary fs-5" asp-action="Edit" asp-route-id="@item.DepartmentId"><i class="bi bi-pen"></i></a> 
                        <a class="text-primary fs-5 mx-2" asp-action="Details" asp-route-id="@item.DepartmentId"><i class="bi bi-info-circle"></i></a> 
                        <a class="text-primary fs-5" asp-action="Delete" asp-route-id="@item.DepartmentId"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation example" class="container mt-4">
    <ul class="pagination">
        <li class="page-item @(Model.DepartmentList.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.DepartmentList.PageIndex - 1)" asp-route-searchString="@Model.CurrentFilter">Anterior</a>
        </li>
        @for (int i = 1; i <= Model.DepartmentList.TotalPages; i++)
        {
            <li class="page-item @(i == Model.DepartmentList.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@Model.CurrentFilter">@i</a>
            </li>
        }
        <li class="page-item @(Model.DepartmentList.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.DepartmentList.PageIndex + 1)" asp-route-searchString="@Model.CurrentFilter">Próxima</a>
        </li>
    </ul>
</nav>

<div class="modal fade" id="create" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-primary fs-3" id="exampleModalLabel">Criar novo departamento</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Department.Name" class="form-control" placeholder="code" />
                        <label asp-for="Department.Name" class="form-label text-secondary"></label>
                        <span asp-validation-for="Department.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-lg btn-primary w-100 fw-bold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
