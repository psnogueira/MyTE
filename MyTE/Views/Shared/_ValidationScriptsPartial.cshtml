<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
$(document).ready(function () {
    // Adiciona método personalizado de validação para o campo Nome
    $.validator.addMethod("noNumbersOrSpecialChars", function (value, element) {
        return this.optional(element) || /^[a-zA-Z\s]*$/.test(value);
    }, "O Nome não deve conter números ou caracteres especiais.");

    // Aplica a validação ao formulário usando o plugin jQuery Validate
    $("form").validate({
        rules: {
            Nome: {
                noNumbersOrSpecialChars: true
            },
            Password: {
                required: true,
                pattern: /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!#\$%\^&\*()\-\+=\[\]{};':""\\|,.<>\/?]).{6,}$/
            }
        },
            messages: {
                Password: {
                    required: "Por favor, insira a senha.",
                    pattern: "A senha deve conter pelo menos 6 caracteres, incluindo um número, uma letra maiúscula, uma letra minúscula e um caractere especial."
                }
            }
    });

});

</script>
