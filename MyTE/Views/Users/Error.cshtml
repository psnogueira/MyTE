@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary
@{
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
</head>
<body>

    <div class="d-flex flex-wrap justify-content-between">
        <div class="col-md-5 h-100 mx-auto">
            <a class="mt-3 d-flex align-items-center gap-1 text-primary fs-5 text-decoration-none" asp-action="Index">
                <i class="bi bi-arrow-left-short fs-3"></i>Voltar
            </a>
            <h1 class="text-primary display-5 fw-bold mb-3">Erros Encontrados</h1>
            <ul>
                @foreach (var state in Model.Values)
                {
                    @foreach (var error in state.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
        <div class="col-md-6 h-100 overflow-hidden">
            <img class="h-40rem" src="~/img/Art.jpg" alt="Arte decorativa" />
        </div>
</body>
</html>
