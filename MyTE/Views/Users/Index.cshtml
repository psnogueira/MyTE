@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<div class="container mt-3">
    <h1 class="fw-bold display-2 text-white mb-3">@ViewData["Title"]</h1>
    <div class="row justify-content-between my-3">
        <form class="col-7" asp-action="Index" method="get">
            <div class="form-actions input-group w-100">
                <select class="form-control" @* asp-for="WBSType" asp-items="Model.Type" *@>
                    <option value="">Todos</option>
                </select>
                <input type="text" class="form-control w-25" id="wbsName" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Buscar por código ou descrição" />
                <input class="btn btn-outline-primary" type="submit" value="Procurar" />
                <a class="btn btn-outline-primary align-content-center" asp-action="Index">Lista completa</a>
            </div>
        </form>
        <div class="col d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Novo usuário</a>
        </div>
    </div>
</div>

<img class="position-absolute object-fit-cover w-100 h-20rem top-0 z-n1" src="~/img/ArtH3.jpg" alt="Arte ilustrativa" />

<div class="bg-white container rounded table-responsive">
    <table class="table text-center align-middle">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.HiringDate)</th>
            <th>@Html.DisplayNameFor(model => model.PID)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.HiringDate.ToShortDateString()</td>
                    <td>@user.PID</td>
                    <td>@user.Department?.Name</td>

                    <td>
                        <a class="text-primary fs-5" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pen"></i></a>
                        <a type="button" class="text-primary fs-5 mx-2" data-bs-toggle="modal" data-bs-target="#detail-@user.Id" data-task-id="@user.Id">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a type="button" class="text-primary fs-5" data-bs-toggle="modal" data-bs-target="#delete-@user.Id" data-task-id="@user.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>

                @* Detail Modal *@
                <div class="modal fade" id="detail-@user.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header d-flex flex-column border-none align-items-start">
                                <span class="d-flex w-100 align-items-center">
                                    <h3 class="text-primary fw-bold ">Detalhes do usuário</h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </span>
                            </div>
                            <div class="modal-body">
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Id)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.Id)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.FirstName)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.LastName)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.HiringDate)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.HiringDate)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.PID)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.PID)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Department)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @user.Department?.Name
                                    </dd>
                                </dl>
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-lg btn-primary w-100 fw-bold" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                            </div>
                        </div>
                    </div>
                </div>

                @* Delete Modal *@
                <div class="modal fade" id="delete-@user.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header align-items-center">
                                <h3 class="text-primary fw-bold ">Deletar usuário</h3>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h4>Tem certeza de que deseja deletar?</h4>
                                <p class="lh-1 mb-4 text-danger">*Esta operação não poderá ser desfeita*</p>
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Id)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.Id)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.FirstName)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.LastName)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.HiringDate)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.HiringDate)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.PID)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(modelItem => user.PID)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Department)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @user.Department?.Name
                                    </dd>
                                </dl>
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-lg btn-danger w-100 fw-bold" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash3"></i> Deletar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>
