@* @model IEnumerable<MyTE.Models.WBS> *@
@model MyTE.Models.ViewModel.EditUserViewModel

@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<div class="container mt-3">
    <h1 class="fw-bold display-2 text-white mb-3">@ViewData["Title"]</h1>
    <div class="d-flex align-items-center justify-content-between my-3">
        <form asp-action="Index" method="get">
            <div class="form-actions input-group w-40rem">
                <input type="text" class="form-control w-25" id="wbsName" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Buscar por nome" />
                <input class="btn btn-outline-primary" type="submit" value="Procurar" />
                <a class="btn btn-outline-primary align-content-center" asp-action="Index">Lista completa</a>
            </div>
        </form>
        @* <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Nova WBS</a> *@
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-plus-lg"></i>Novo Usuário</a>
    </div>
</div>

<img class="position-absolute object-fit-cover w-100 h-50 top-0 z-n1" src="~/img/ArtH3.jpg" alt="Arte ilustrativa" />

<div class="bg-white container rounded table-responsive">
    <table class="table text-center align-middle">
        <thead>
            <tr>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.User.PID)
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.User.Department)
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.User.HiringDate)
                </th>
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.User.Role)
                </th>
                <th class="col-2">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserList)
            {
                <tr>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="col-1">
                        @Html.DisplayFor(modelItem => item.PID)
                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.HiringDate)
                    </td>
                    <td class="col-1">
                        @if (Model.UserRoles.ContainsKey(item.Id))
                        {
                            @foreach (var role in Model.UserRoles[item.Id])
                            {
                                <span>@role</span>

                                <br />
                            }
                        }
                    </td>

                    <td class ="col-2">
                        <a class="text-primary fs-5" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pen"></i></a>

                        @* <a class="text-primary fs-5 mx-2" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a> *@
                        <a type="button" class="text-primary fs-5 mx-2" data-bs-toggle="modal" data-bs-target="#detail-@item.Id" data-task-id="@item.Id">
                            <i class="bi bi-info-circle"></i>
                        </a>

                        <a type="button" class="text-primary fs-5" data-bs-toggle="modal" data-bs-target="#delete-@item.Id" data-task-id="@item.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>

                @* Detail Modal *@
                <div class="modal fade" id="detail-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header d-flex flex-column border-none  align-items-start">
                                <span class="d-flex w-100 flex-row">
                                    <h2 class="text-primary fw-bold ">Detalhes do @ViewData["Title"]</h2>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </span>
                            </div>
                            <div class="modal-body">
                                <dl class="row">
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.FullName)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(model => item.FullName)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.Email)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(model => item.Email)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.PID)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(model => item.PID)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.Department)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(modelItem => item.Department.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(modelItem => item.HiringDate)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(modelItem => item.HiringDate)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.Role)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @if (Model.UserRoles.ContainsKey(item.Id))
                                        {
                                            @foreach (var role in Model.UserRoles[item.Id])
                                            {
                                                <span>@role</span>

                                                <br />
                                            }
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-lg btn-primary w-100 fw-bold" asp-action="Edit" asp-route-id="@item.Id"> Editar</a>
                            </div>
                        </div>
                    </div>
                </div>




               @*  Delete Modal *@
                 <div class="modal fade" id="delete-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header d-flex flex-column border-none  align-items-start">
                                <span class="d-flex w-100 flex-row">
            <h1 class="text-primary fw-bold ">Deletar @ViewData["Title"]</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </span>
                                <h3>Tem certeza de que deseja deletar?</h3>
                                <p class="text-danger mb-0 fw-bold">Esta operação não poderá ser desfeita</p>
                            </div>
                            <div class="modal-body">
                                <dl class="row">
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.FullName)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(model => item.FullName)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.Email)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(model => item.Email)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.PID)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(model => item.PID)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.Department)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(modelItem => item.Department.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(modelItem => item.HiringDate)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @Html.DisplayFor(modelItem => item.HiringDate)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.User.Role)
                                    </dt>
                                    <dd class="col-sm-7">
                                        @if (Model.UserRoles.ContainsKey(item.Id))
                                        {
                                            @foreach (var role in Model.UserRoles[item.Id])
                                            {
                                                <span>@role</span>

                                                <br />
                                            }
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-lg btn-danger w-100 fw-bold" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Deletar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation example" class="container mt-4">
    <ul class="pagination">
        <li class="page-item @(Model.UserList.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.UserList.PageIndex - 1)" asp-route-searchString="@Model.CurrentFilter">Anterior</a>
        </li>
        @for (int i = 1; i <= Model.UserList.TotalPages; i++)
        {
            <li class="page-item @(i == Model.UserList.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@Model.CurrentFilter">@i</a>
            </li>
        }
        <li class="page-item @(Model.UserList.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.UserList.PageIndex + 1)" asp-route-searchString="@Model.CurrentFilter">Próxima</a>
        </li>
    </ul>
</nav>



@section Scripts {
    <script>
        $(document).ready(function () {
            // O ID deve ser igual ao colocado no input do search
            $("#wbsName").autocomplete({
                source: function (request, response) {
                    var tableName = "WBS"; // O ID deve ser igual ao colocado no input do search
                    var columnName1 = "Code"; // Nome da primeira coluna usada no Auto-complete
                    var columnName2 = "Desc"; // Nome da segunda coluna usada no Auto-complete
                    var url = 'api/autocomplete/' + tableName + '/search';
                    var data = { term: request.term, columnName1: columnName1 };

                    if (columnName2) {
                        data.columnName2 = columnName2;
                    }

                    $.ajax({
                        url: url,
                        data: data,
                        success: function (data) {
                            response(data);
                        }
                    });
                }
            });
        });
    </script>
}