@model IEnumerable<ApplicationUser>

<h1>Users</h1>
<a asp-action="Create" class="btn btn-primary">Create New User</a>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hiring Date</th>
            <th>PID</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.HiringDate.ToShortDateString()</td>
                <td>@user.PID</td>
                <td>@user.Department?.Name</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a type="button" class="text-primary fs-5" data-bs-toggle="modal" data-bs-target="#delete-@user.Id" data-task-id="@user.Id">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>


            @* Delete Modal *@
            <div class="modal fade" id="delete-@user.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header d-flex flex-column border-none  align-items-start">
                            <span class="d-flex w-100 flex-row">
                                <h1 class="text-primary fw-bold ">Deletar WBS</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </span>
                            <h3>Tem certeza de que deseja deletar?</h3>
                            <p class="text-danger mb-0 fw-bold">Esta operação não poderá ser desfeita</p>
                        </div>
                        <div class="modal-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Id)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(modelItem => user.Id)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(modelItem => user.FirstName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.LastName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(modelItem => user.LastName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HiringDate)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(modelItem => user.HiringDate)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PID)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(modelItem => user.PID)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Department)
                                </dt>
                                <dd class="col-sm-10">
                                    @user.Department?.Name
                                </dd>
                            </dl>
                        </div>
                        <div class="modal-footer">
                            <a type="button" class="btn btn-lg btn-danger w-100 fw-bold" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash3"></i> Deletar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
