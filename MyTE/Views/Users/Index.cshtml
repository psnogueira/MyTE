@model IEnumerable<ApplicationUser>

<h1>Users</h1>
<a asp-action="Create" class="btn btn-primary">Create New User</a>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hiring Date</th>
            <th>PID</th>
            <th>Department</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.HiringDate.ToShortDateString()</td>
                <td>@user.PID</td>
                <td>@user.Department?.Name</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
