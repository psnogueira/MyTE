@model CreateUserViewModel
@{
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<div class="d-flex flex-wrap justify-content-between">
    <div class="col-md-5 h-100 mx-auto">
        <a class="mt-3 d-flex align-items-center gap-1 text-primary fs-5 text-decoration-none" asp-action="Index">
            <i class="bi bi-arrow-left-short fs-3"></i>Voltar
        </a>
        <h1 class="text-primary display-5 fw-bold mb-3">Cadastrar Usuário</h1>
        <form asp-action="Create">
            <div class="row">
                <div class="col form-floating mb-3">
                    <input asp-for="FirstName" class="form-control" placeholder="." />
                    <label asp-for="FirstName" class="ms-3 ps-2 control-label text-secondary"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col form-floating mb-3">
                    <input asp-for="LastName" class="form-control" placeholder="." />
                    <label asp-for="LastName" class="ms-3 ps-2 control-label text-secondary"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="." />
                <label asp-for="Email" class="control-label text-secondary"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col form-floating mb-3">
                    <input asp-for="HiringDate" class="form-control" />
                    <label asp-for="HiringDate" class="ms-3 ps-2 control-label text-secondary"></label>
                    <span asp-validation-for="HiringDate" class="text-danger"></span>
                </div>
                <div class="col form-floating mb-3">
                    <input asp-for="PID" class="form-control" placeholder="." />
                    <label asp-for="PID" class="ms-3 ps-2 control-label text-secondary"></label>
                    <span asp-validation-for="PID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                    <option selected disabled value="">-------</option>
                </select>
                <label asp-for="DepartmentId" class="control-label text-secondary"></label>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                    <option selected disabled value="">-------</option>
                </select>
                <label asp-for="RoleId" class="control-label text-secondary"></label>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="." />
                    <label asp-for="Password" class="ms-3 ps-2 control-label text-secondary"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col form-floating mb-3">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="." />
                    <label asp-for="ConfirmPassword" class="ms-3 ps-2 control-label text-secondary"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg fw-bold w-100">Criar</button>
        </form>
    </div>
    <div class="col-md-6  overflow-hidden">
        <img class="h-40rem" src="~/img/Art.jpg" alt="Arte decorativa" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
