@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}


<h1>Níveis de Acesso (Roles)</h1>

<p>
    <a asp-action="Create">Criar novo Nível de Acesso</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                <td>@Html.DisplayFor(modelitem => item.NormalizedName)</td>
                <td>
                    <a class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i>  Editar</a>
                    <a class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i>  Detalhes</a>
                    <a class="btn btn-sm btn-danger"><i class="bi bi-pencil-fill"></i>  Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
