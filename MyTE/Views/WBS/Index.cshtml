@model IEnumerable<MyTE.Models.WBS>

@{
    ViewData["Title"] = "WBS";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}
<div class="container mt-3">
    <h1 class="fw-bold display-2 text-white mb-3">WBS</h1>
    <div class="d-flex align-items-center justify-content-between my-3">
        <form asp-action="Index" method="get">
            <div class="form-actions input-group">
                <input type="text" class="form-control col-3" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Código ou descrição" />
                <input class="btn btn-outline-primary" type="submit" value="Procurar" />
                <a class="btn btn-outline-primary align-content-center" asp-action="Index">Lista completa</a>
            </div>
        </form>
        <a asp-action="Create" class="btn btn-secondary text-white"><i class="bi bi-plus-lg"></i> Nova WBS</a>
    </div>
</div>

<img class="position-absolute object-fit-cover w-100 h-50 top-0 z-n1" src="~/img/art.jpg" alt="Arte ilustrativa" />

<div class="bg-white  container rounded table-responsive">
    <table class="table text-center align-middle">
        <thead>
            <tr>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th class="col-4">
                    @Html.DisplayNameFor(model => model.Desc)
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th class="col-2">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a class="text-primary fs-5" asp-action="Edit" asp-route-id="@item.WBSId"><i class="bi bi-pen"></i></a>
                        <a class="text-primary fs-5 mx-2" asp-action="Details" asp-route-id="@item.WBSId"><i class="bi bi-info-circle"></i></a>
                        <a class="text-primary fs-5" asp-action="Delete" asp-route-id="@item.WBSId"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>