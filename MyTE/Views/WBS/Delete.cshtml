@model MyTE.Models.WBS

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-between align-items-center position-relative">
    <div class="col-md-5">
        <a class="position-absolute top-0 mt-2 start-0 d-flex align-items-center gap-1 text-primary fs-5 text-decoration-none" asp-action="Index">
            <i class="bi bi-arrow-left-short fs-3"></i>Voltar
        </a>
        <div class="mb-3">
            <h1 class="text-primary fw-bold">Deletar WBS</h1>
            <h3>Tem certeza de que deseja excluir isso?</h3>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Desc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Desc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="WBSId" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
        </form>
    </div>
    <div class="col-md-6">
        <img class=" w-100" src="~/img/artSq.jpg" alt="Arte decorativa" />
    </div>
</div>
